<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.activity.GameSelectionActivity">

  <ImageView
    android:id="@+id/img_background_gameSelection"
    android:layout_width="731dp"
    android:layout_height="411dp"
    android:contentDescription="@string/todo"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@mipmap/menu_bg3" />

  <ImageButton
    android:id="@+id/btn_pause_gameSelection"
    android:layout_width="45dp"
    android:layout_height="39dp"
    android:layout_marginBottom="26dp"
    android:layout_marginStart="20dp"
    android:background="@mipmap/back"
    android:backgroundTint="#fff"
    android:contentDescription="@string/todo"
    android:onClick="btnBackClicked"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <ImageButton
    android:id="@+id/btn_settings_gameSelection"
    android:layout_width="45dp"
    android:layout_height="39dp"
    android:layout_marginBottom="26dp"
    android:layout_marginEnd="20dp"
    android:background="@mipmap/settings"
    android:backgroundTint="#fff"
    android:contentDescription="@string/todo"
    android:onClick="btnSettingsClicked"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <Button
    android:id="@+id/btn_newGame"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="130dp"
    android:backgroundTint="#232c65"
    android:onClick="btnNewGameClicked"
    android:text="@string/new_game"
    android:textSize="30sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.501"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/btn_resumeGame"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:backgroundTint="#232c65"
    android:onClick="btnResumeGameClicked"
    android:text="@string/resume_game"
    android:textSize="30sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_newGame" />

  <Button
    android:id="@+id/btn_deleteGame"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:backgroundTint="#232c65"
    android:onClick="btnDeleteGameClicked"
    android:text="@string/delete_game"
    android:textSize="30sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_resumeGame" />

  <TextView
    android:id="@+id/txt_saveGameTitle"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:shadowColor="#000"
    android:shadowDx="5"
    android:shadowDy="5"
    android:shadowRadius="5"
    android:text="@string/saved_game"
    android:textColor="#fff"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="@+id/img_background_gameSelection"
    app:layout_constraintHorizontal_bias="0.499"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/img_background_gameSelection" />

  <TextView
    android:id="@+id/txt_saveGameInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:shadowColor="#000"
    android:shadowDx="5"
    android:shadowDy="5"
    android:shadowRadius="5"
    android:textColor="#fff"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_saveGameTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>